@model IEnumerable<SisControleVenda.Models.Produto>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<h1>Index</h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary">
            <i class="bi bi-plus"></i>
            Create New
        </button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeLivro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeAutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoPublic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QauntidadeEmEstoque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeLivro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoPublic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QauntidadeEmEstoque)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ProdutoID" class="btn btn-primary btn-sn">
                            <i class="bi bi-pencil-fill"></i>
                            Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ProdutoID" class="btn btn-secondary btn-sn">
                            <i class="bi bi-card-list"></i>
                            Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ProdutoID" class="btn btn-danger btn-sn">
                            <i class="bi bi-trash3-fill"></i>
                            Delete
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
